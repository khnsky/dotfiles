# vim:fdm=marker:fmr={{{,}}}:fdl=0:fen:ts=4:sts=4:sw=4:et

# start a terminal
super + Return
 st || i3-sensible-terminal

# dmenu
super + o
 dmenu_run -b -nb black -sb black -sb "#0469A0" -sf black

# reload i3 and restart sxhkd
super + shift + r
 i3-msg reload; pkill -i --signal SIGUSR1 sxhkd

# print screen
{_,ctrl} + {_,shift} + Print
 mkdir -p ~/pictures/screenshots \
 && maim {_,--hidecursor} {_,--select}  ~/pictures/screenshots/$(date +%s).png

# thinkpad media buttons
# TODO: only pulseaudio, no alsa support
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
 pactl set-sink-mute 0 false; pactl set-sink-volume 0 {+5%,-5%}

XF86AudioMute
 pactl set-sink-mute 0 toggle

XF86AudioMicMute
 pactl set-source-mute 1 toggle

# i3 bindings {{{
# switch to/move container to workspace
super + {_,shift} + {1,2,3,4,5,6,7,8,9,0,Tab}
 i3-msg {_,move container to} workspace {1,2,3,4,5,6,7,8,9,0,back_and_forth}

super + {p,n}
 i3-msg workspace {prev,next}

# resize containers with super + r then hjkl
super + r ; {h,j,k,l}
 i3-msg 'resize {shrink width,grow height,shrink height,grow width} 5 px or 5 ppt'

# kill focused window
super + q
 i3-msg kill

# change focus to/move focused window
super + {_,shift} + {h,j,k,l}
 i3-msg {focus,move} {left,down,up,right}

# split vertically/horizontally
super + {_,shift} + v
 i3-msg split {h,v}

# enter fullscreen mode for the focused container
super + f
 i3-msg fullscreen toggle

# change container layout (tabbed, toggle split)
super + {w,e}
 i3-msg layout {tabbed,toggle split}

# toggle floating / change focus floating tiling
super + {_,shift} + space
 i3-msg {focus mode_toggle,floating toggle}

# focus the parent / child container
super + {_,shift} + a
 i3-msg focus {parent,child}

# scratchpad
super + x
 i3-msg '[instance="scratchpad"] scratchpad show;       \
 [instance="scratchpad"] move position center'

# bring emacs or run if not running
super + c
 pgrep emacs                                            \
 && i3-msg '[instance="emacs"] move scratchpad;         \
 [instance="emacs"] scratchpad show; floating disable'  \
 || emacs
# }}}
