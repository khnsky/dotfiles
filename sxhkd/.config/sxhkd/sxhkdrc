# vim:fdm=marker:fmr={{{,}}}:fdl=0:fen:ts=4:sts=4:sw=4:et

# start a terminal
super + Return
 st || i3-sensible-terminal

# rofi
super + d
 rofi -show run

# restart i3 inplace (preserve layout/session) and restart sxhkd
super + shift + r
 i3-msg restart && pkill -i --signal SIGUSR1 sxhkd

# print screen
{_,ctrl} + {_,shift} + Print
 mkdir -p ~/pictures/screenshots && maim {_,--hidecursor} {_,--select}  ~/pictures/screenshots/$(date +%s).png

# i3 bindings {{{
# switch to/move container to workspace
super + {_,shift} + {1,2,3,4,5,6,7,8,9,0,z}
 i3-msg {_,move container to} workspace {1,2,3,4,5,6,7,8,9,0,back_and_forth}

# resize containers with super + r then hjkl
super + r ; {h,j,k,l}
 i3-msg 'resize {shrink width,grow height,shrink height,grow width} 5 px or 5 ppt'

# kill focused window
super + shift + q
 i3-msg kill

# change focus to/move focused window
super + {_,shift} + {h,j,k,l}
 i3-msg {focus,move} {left,down,up,right}

# split vertically/horizontally
super + {_,shift} + v
 i3-msg split {h,v}

# enter fullscreen mode for the focused container
super + f
 i3-msg fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
super + {s,w,e}
 i3-msg layout {stacking,tabbed,toggle split}

# toggle tiling / floating
super + shift + space
 i3-msg floating toggle

# change focus between tiling / floating windows
super + space
 i3-msg focus mode_toggle

# focus the parent / child container
super + {_,shift} + a
 i3-msg focus {parent,child}

# scratchpad
super + x
 i3-msg '[instance="scratchpad"] scratchpad show; [instance="scratchpad"] move position center'

# bring emacs
super + c
 i3-msg '[instance="emacs"] move scratchpad; [instance="emacs"] scratchpad show; floating disable'
# }}}
