# set zathura to use x clipboard buffer for copying
set selection-clipboard clipboard

# nightmode
set recolor true
set recolor-keephue true
set recolor-darkcolor "#FFFFFF"
set recolor-litghtcolor "#000000"

# bindings
# use jk for changing pages, JK for scrolling
map j navigate next
map [fullscreen] j navigate next

map k navigate previous
map [fullscreen] k navigate previous

map J scroll down
map [fullscreen] J scroll down

map K scroll up
map [fullscreen] K scroll up
