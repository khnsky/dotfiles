# set zathura to use x clipboard buffer for copying
set selection-clipboard             clipboard

# vertical center zoom for when using width fit
set vertical-center                 true

# interface
set guioptions                      ""
set statusbar-basename              true
set window-title-basename           true

# night-mode
set recolor                         true
set recolor-keephue                 true
set recolor-darkcolor               "#FFFFFF"
set recolor-lightcolor              "#000000"

# colors
set completion-bg                   "#000000"
set completion-fg                   "#FFFFFF"
set completion-highlight-bg         "#404040"
set completion-highlight-fg         "#000000"

set highlight-active-color          "#808080"
set highlight-color                 "#808080"

set index-active-bg                 "#808080"
set index-active-fg                 "#000000"
set index-bg                        "#000000"
set index-fg                        "#FFFFFF"

set inputbar-bg                     "#000000"
set inputbar-fg                     "#ffffff"

set notification-bg                 "#808080"
set notification-fg                 "#000000"

# apparently it accepts 'html' and 'css3' style color codes (?)
# but i don't know how to set alpha, 
# however if you set it to a bad value it becomes transparent
set statusbar-bg                    ""
set statusbar-fg                    "#808080"

# switch jk and JK
map [normal]                        j navigate next
map [normal]                        k navigate previous
map [normal]                        J scroll down
map [normal]                        K scroll up
map [fullscreen]                    j navigate next
map [fullscreen]                    k navigate previous
map [fullscreen]                    J scroll down
map [fullscreen]                    K scroll up

