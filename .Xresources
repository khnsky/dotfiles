! urxvt font and spacing

! URxvt.font: xft:monospace:size=13

URxvt.font: xft:DejaVu\ Sans\ Mono:size=13:antialias=true,xft:DejaVu\ Sans\ Mono\ for\ Powerline:size=13:antialias=true
! URxvt.letterSpace:-1

! urxvt scroll bar
URxvt.scrollBar: false

! colors

! special
*.foreground:   #ffffff
*.background:   #151515
*.cursorColor:  #ffffff

! black
*.color0:       #3d3d3d
*.color8:       #3d3d3d

! red
*.color1:       #992929
*.color9:       #992929

! green
*.color2:       #007777
*.color10:      #007777

! yellow
*.color3:       #ce8030
*.color11:      #ce8030

! blue
*.color4:       #31658c
*.color12:      #31658c

! magenta
*.color5:       #d80d80
*.color13:      #d80d80

! cyan
*.color6:       #00b0b0
*.color14:      #00b0b0

! white
*.color7:       #b2b2b2
*.color15:      #b2b2b2

! ROFI Color theme
rofi.color-enabled: true
rofi.color-window: #151515, #151515, #151515
rofi.color-normal: #151515, #3d3d3d, #151515, #b2b2b2, #151515
rofi.color-active: #151515, #31658c, #151515, #31658c, #151515
rofi.color-urgent: #151515, #992929, #151515, #992929, #151515
