Print
 mkdir -p ~/pictures/screenshots && maim ~/pictures/screenshots/$(date +%s).png
ctrl + Print
 mkdir -p ~/pictures/screenshots && maim --hidecursor ~/pictures/screenshots/$(date +%s).png
shift + Print
 mkdir -p ~/pictures/screenshots && maim --select ~/pictures/screenshots/$(date +%s).png
ctrl + shift + Print
 mkdir -p ~/pictures/screenshots && maim --select --hidecursor ~/pictures/screenshots/$(date +%s).png

